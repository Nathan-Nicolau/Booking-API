# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /assets/*file     controllers.Assets.versioned(path="/public", file: Asset)


# Map static resources from the /public folder to the /assets URL path

GET     /quartos                                  controllers.ReservaController.getTodosQuartos
GET     /quartos-disponiveis                      controllers.ReservaController.getQuartosDisponiveis
POST    /adicionar-quarto-inventario              controllers.ReservaController.adicionarQuartoInventario
PUT     /remover-quarto-inventario/:idQuarto      controllers.ReservaController.removerQuartoInventario(idQuarto: Int)
PUT     /retornar-quarto-inventario/:idQuarto     controllers.ReservaController.retornarQuartoAoInventario(idQuarto: Int)
GET     /reservas-periodo                         controllers.ReservaController.getReservasPeriodo
POST    /criar-nova-reserva                       controllers.ReservaController.criarNovaReserva
